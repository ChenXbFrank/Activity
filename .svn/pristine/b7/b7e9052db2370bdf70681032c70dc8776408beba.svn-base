* {
	padding: 0px;
	margin: 0px;
}

html,
body {
	width: 100%;
	height: 100%;
}
.bg{
	width: 100%;
	height: 100%;
	/* background:  url("../img/bg-404.png"); */
	background-size: cover;
	position: relative;
}
.bg img{
	width: 69.5vw;
	height: 25.6vw;
	position: absolute;
	top: 50%;
	left: 51.5%;
	margin-left:-34.77vw ;
	margin-top:-12.8vw ;
	opacity: .5 !important;
	
}

.case img:nth-child(2){
	width: 21.9vw;
	height: 21.9vw;
	
}
.text{
	width: 30vw;
	height: 10vw;
	/*background-color: black;*/
	position: absolute;
	top: 31%;
	left: 55%;
}
.text p:nth-child(1){
	width: 41.4vw;
	height: 3.2vw;
	color: white;
	font-size: 4.39vw;
	font-family: "黑体";
	
}

.text p:nth-child(2){
	color: white;
	width: 41.4vw;
	height: 2vw;
	color: white;
	font-size:1.2vw;
	font-family: "黑体";
	margin-top: 3vw;
}
.text span{
	color: yellow;
}
.back{
	width: 10.98vw;
	height: 2.19vw;
	background-color: yellow;
	text-align: center;
	line-height: 2.19vw;
	color: white;
	position: absolute;
	top: 95%;
	left: 50%;
	margin-left: -5.49vw;
	margin-top: -1.09vw;
}
