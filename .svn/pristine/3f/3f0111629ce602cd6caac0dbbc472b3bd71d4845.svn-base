* {
	margin: 0;
	padding: 0;
}
input {
	border: none;
}
label {
	color: white;
}
body,
html {
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.bg-mask2 {
	width: 100%;
	height: 100%;
	background-size: 13rem 13rem;
	background-color: rgba(2, 2, 2, 0.6);
	position: relative;
	z-index: 1;
}
.bg-mask2 img:first-child {
	width: 7.173333rem;
	height: 2.213333rem;
	position: absolute;
	top: 30%;
	left: 50%;
	margin-left: -3.586666rem;
	margin-top: -1.106666rem;
	z-index: 3;
}
.bg-mask2 .Price{
	position: absolute;
	top: 27%;
	left: 39%;
	color: white;
	font-size: 0.533333rem;
	z-index: 5;
}
.box {
	width: 6rem;
	height: 6.666666rem;
	background-color: #e5db34;
	border-radius: 0.066666rem;
	position: absolute;
	top: 51%;
	left: 50%;
	margin-left: -3rem;
	margin-top: -3.333333rem;
	z-index: 2;
}
.box p:nth-child(1) {
	width: 2.666666rem;
	height: 0.4rem;
	position: absolute;
	top:20%;
	left: 53%;
	margin-left: -1.333333rem;
	margin-top:-0.2rem ;
	color: white;
	font-size: 0.346666rem;
	text-shadow: 0.013333rem 0.013333rem 0.013333rem #fc7373;
}
.QR {
width: 2.613333rem;
	height: 2.613333rem;
	background-color: gainsboro;
	border-radius: 0.066666rem;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-left: -1.306666rem;
	margin-top: -1.306666rem;
}
.scanning{
	width: 3.68rem;
	height: 0.4rem;
	position: absolute;
	top: 80%;
	left: 53%;
	margin-top:-0.2rem ;
	margin-left: -1.84rem;
	font-size: 0.32rem;
}
.box p:last-child{
	width: 3.68rem;
	height: 0.4rem;
	position: absolute;
	top: 90%;
	left: 53%;
	margin-top:-0.2rem ;
	margin-left: -1.84rem;
	font-size: 0.32rem;
}
.close{
	width: 0.48rem;
	height: 0.48rem;
	position: absolute;
	top: 3.066666rem;
	left: 8.666666rem;
}
