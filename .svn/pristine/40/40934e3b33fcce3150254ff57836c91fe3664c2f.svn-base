	<script type="text/javascript">
	
		/* 华为 */
		if(screen.height<=640 && screen.width<=360){
			/* $(".title img").css({"width":'9.5rem',"height":"7rem"})
			$(".rule-name p").css({"bottom":"3%"}) */
			$(".beijing").css({"margin-top":"6rem"})
			$(".rule").css({"margin-top":"0.6rem"})
			$(".erweima img").css({"margin-top":"5rem"})
			$(".close").css({"top":"0.55rem"})
		}
		/* 苹果x */
		if(screen.height==812 && screen.width==375){
			$(".beijing").css({"margin-top":"8.4rem"})
			$(".close").css({"margin-top":"1rem"})
			$(".main-small").css({"margin-top":"6rem"})
			$(".my-kuang").css({"margin-top":"6rem"})
			
		}
		
		$(".myjoin img").click(function() {
			$(".meto").show()
		});
		
		
		$(".h5-img").click(function() {
			$(".yikan").css({
				"display": "none"
			})
		});
		$(".h5-img").click(function() {
			$(".shibai").css({
				"display": "none"
			})
		});
		$(".h5-img").click(function() {
			$(".chnegg").css({
				"display": "none"
			})
		});
		$(function() {
			var subscribe = $("#subscribe").val();
			if(subscribe == 1) {
				$(".erweima").css({
					"display": "none"
				})
			} else if(subscribe == 0) {
				$(".erweima").css({
					"display": "block"
				})
			}
			var shareTitle = $("#shareTitle").val();
			var shareDetail = $("#shareDetail").val();
			var shareImg = $("#shareImg").val();
			$.ajax({
				type: "GET",
				url: "${basePath}/ShareBargain/WxShareConfig",
				async: true,
				dataType: "json",
				data: {
					"locationUrl": location.href
				},
				success: function(config) {
					wx.config({
						debug: false, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
						appId: config.appId, // 必填，公众号的唯一标识
						timestamp: config.timestamp, // 必填，生成签名的时间戳
						nonceStr: config.nonceStr, // 必填，生成签名的随机串
						signature: config.signature, // 必填，签名，见附录1
						jsApiList: ['onMenuShareAppMessage', 'onMenuShareTimeline']
						// 必填，需要使用的JS接口列表，所有JS接口列表见附录2
					});
					wx.ready(function() {
						//分享朋友
						wx.onMenuShareAppMessage({
							title: shareTitle, // 分享标题
							desc: shareDetail, // 分享描述
							link: '${url}', // 分享链接
							imgUrl: 'http://www.wlypls.cn/activityUploadPath' + shareImg, // 分享图标
							trigger: function(res) {

							},
							success: function() {
								// 用户确认分享后执行的回调函数
							},
							cancel: function() {
								// 用户取消分享后执行的回调函数
								//alert("分享失败");
								$(".shibai").css({
									"display": "block"
								})
							}
						});
						//分享朋友圈
						wx.onMenuShareTimeline({
							title: shareTitle, // 分享标题
							link: '${url}', // 分享链接
							imgUrl: 'http://www.wlypls.cn/activityUploadPath' + shareImg, // 分享图标
							success: function() {
								$(".chnegg").css({
									"display": "block"
								})
							},
							cancel: function() {
								// 用户取消分享后执行的回调函数
								$(".shibai").css({
									"display": "block"
								})
							}
						});
					});
				}
			});
		})
		$(".dao img").click(function() {
			$(".load").show();
			var activityId = $("#activityId").val();
			var shareBargainPrizeId = $("#shareBargainPrizeId").val();
			var friendBargainId = $("#friendBargainId").val();
			var appid = $("#appid").val();
			var joinBelongPublicNumberId = $("#joinBelongPublicNumberId").val();
			var chopAKnifeOpenid = $("#chopAKnifeOpenid").val();
			$.ajax({
				type: 'POST',
				url: '${basePath}/ShareBargain/chopAKnife',
				data: {
					"activityId": activityId,
					"shareBargainPrizeId": shareBargainPrizeId,
					"friendBargainId": friendBargainId,
					"appid": appid,
					"qrcode": '${qrcode}',
					"joinBelongPublicNumberId": joinBelongPublicNumberId,
					"chopAKnifeOpenid": chopAKnifeOpenid
				},
				success: function(date) {
					$(".load").hide();
					if(date.result == "nofollow"){
						$("#end").show();
					}else{
						if(date.result == "已经砍至最低价") {
							$(".end").css({
								"display": "block"
							});
						} else if(date.result == "您朋友砍价次数已完") {
							alert("您朋友砍价次数已完");
						} else if(date.result == "") {
							$(".kaishi").css({
								"display": "block"
							});
							$(".Price").html(date.money);
						} else if(date.result == "您已经帮忙砍价了") {
							$(".yikan").css({
								"display": "block"
							})
						}
					}
				
				}
			});
		})
		//我也要参加砍价
		$(".rr").click(function() {
			var activityId = $("#activityId").val();
			var shareBargainPrizeId = $("#shareBargainPrizeId").val();
			var friendBargainId = $("#friendBargainId").val();
			var joinBelongPublicNumberId = $("#joinBelongPublicNumberId").val();
			var appid = $("#appid").val();
			location.href = "${basePath}/ShareBargain/IWantBargain?Activity=" + activityId + "&friendBargainId=" + friendBargainId + "&spn=" + joinBelongPublicNumberId;
		})
		//分享朋友的链接
		//砍价结束关闭按钮 
		$(".close").click(function() {
			$(".end").css({
				"display": "none"
			});
		})
		$(".close").click(function() {
			$(".kaishi").css({
				"display": "none"
			});
			$(".meto").hide()
		})
			$(".shijian").click(function(){
				$(".bg1").show();
				$(".small-bg").show();
				$(".bg").hide();
			})
			$(".close").click(function(){
				$(".bg1").hide();
				$(".small-bg").hide();
				$(".bg").show();
			})
	</script>

</html>